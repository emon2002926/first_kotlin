<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_marginTop="20dp"
    android:layout_marginBottom="10dp"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:id="@+id/frontPart"
        >



        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:background="@drawable/card_two_first_half"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/toto_comapny"

                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TOTO Company"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="#443737"
                android:textSize="17dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Job less people's home"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="#2F3B69"
                android:textSize="15dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1.2"
            android:background="#2F3B69"
            android:orientation="vertical"
            android:paddingStart="15dp"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/russo_one"
                android:includeFontPadding="false"
                android:gravity="center"
                android:text="Iman Emon"
                android:textColor="@color/white"
                android:textSize="27dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Managing Director "
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:layout_marginBottom="10dp"
                android:textSize="16dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="55dp"
                android:gravity="center_vertical"

                android:layout_height="wrap_content">
                <include
                    layout="@layout/card_two_phn_number_layout"/>
                <include
                    layout="@layout/card_two_email_layout"/>

                <include
                    layout="@layout/card_two_address_layout"/>
            </LinearLayout>

        </LinearLayout>



    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/frontPart">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:background="#E3DDDC"
            android:orientation="vertical"
            android:gravity="center"
            android:id="@+id/first"
            >
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/toto_comapny"

                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TOTO Company"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="#443737"
                android:textSize="27dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Job less people's home"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="#2F3B69"
                android:textSize="15dp"/>

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#2F3B69"
            android:text="www.toto.co"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_below="@+id/first"/>

    </RelativeLayout>

</RelativeLayout>



