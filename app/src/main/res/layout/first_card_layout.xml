<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginTop="20dp"
    android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="250dp">
            <LinearLayout
                android:id="@+id/views_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerVertical="true">

                <View
                    android:layout_width="5dp"
                    android:layout_height="match_parent"
                    android:background="@color/black" />
                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".75"
                    android:background="#99C5C8" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:orientation="vertical"
                    android:paddingStart="70dp"
                    android:gravity="center_vertical"
                    android:background="#343537"
                    tools:ignore="RtlSymmetry">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/hammersmith_one"
                        android:text="Iman Emon"
                        android:includeFontPadding="false"
                        android:textColor="@color/white"
                        android:textSize="25dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:fontFamily="@font/montserrat_light"
                        android:includeFontPadding="false"
                        android:text="Junior Android Developer"
                        android:textColor="#CAFFFFFF"
                        android:textSize="16dp" />


                    <include
                        layout="@layout/phn_number_layout"/>
                    <include
                        layout="@layout/email_layout"/>
                    <include
                        layout="@layout/web"/>
                    <include
                        layout="@layout/address"/>



                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="118dp"
                android:layout_height="118dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="50dp"
                android:background="@drawable/profile_img_bg"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:gravity="center|center_horizontal"
                    android:layout_marginBottom="1dp"
                    android:background="@color/transPerent"
                    >
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="105dp"
                        android:layout_height="105dp"
                        android:src="@drawable/profile"
                        />
                </LinearLayout>

            </LinearLayout>
        </RelativeLayout>



</LinearLayout>